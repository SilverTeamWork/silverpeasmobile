<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field='msg' type='com.silverpeas.mobile.client.resources.ApplicationMessages'/>

  <g:HTMLPanel ui:field="container" styleName="ui-panel ui-panel-position-left ui-panel-display-push ui-body-inherit ui-panel-animate ui-panel-close">
    <div class="ui-panel-inner">
      <g:HTMLPanel ui:field="user">
        <img src="" id="avatar"/>
        <span id="userName"></span>
        <br /><span class="statut"><span ui:field="status"></span><g:Anchor  ui:field="updateStatus" styleName="edit-my-statut" text="{msg.editStatus}"></g:Anchor></span>
      </g:HTMLPanel>

      <div id="menu-search">
        <g:TextBox ui:field="search" styleName="searchBox"/>
        <g:Anchor ui:field="searchButton" styleName="searchButton" text="{msg.search}"/>
      </div>

      <ul id="navmenu-panel">
        <li id="menu-home"><g:Anchor ui:field="home" styleName="ui-link" text="{msg.home}"/></li>
        <li id="menu-parameter"><g:Anchor ui:field="config" styleName="ui-link" text="{msg.config}"/></li>
        <li id="menu-help"><g:Anchor ui:field="help" styleName="ui-link" text="{msg.help}"/></li>
        <li id="menu-logout"><g:Anchor ui:field="disconnect" styleName="ui-link" text="{msg.disconnect}"/></li>
      </ul>
    </div>
  </g:HTMLPanel>

</ui:UiBinder> 